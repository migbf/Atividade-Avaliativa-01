#include <stdio.h>
#include <locale.h>

int main(){
    //atividade 04 pegar um numero positivo e apos uma contagem chegar em 0
  setlocale(LC_ALL, "portuguese");

  int x;

  printf("Diga um nÃºmero inteiro positivo: ");
  scanf("%d", &x);

  while (x >= 0){
    printf("contagem: %d\n", x);
    x = x -1;
  }

  return 0;
}
